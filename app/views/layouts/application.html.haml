              %a.nav-parent
                Buzzednow.com                
            .section-nav
              %a.nav-parent
                Quick Seo Results 
        .dashboard-content.group
          = yield
    
    .modal.hide#addResponseModal
      .modal-header
        %button.close
        %h2 Add a response
      .modal-body
        .form-wrapper
          .field-wrapper
            %fieldset
              .label-container
                %label Command
              .input-container
                %input{ :type => 'text' }
            %fieldset
              .label-container
                %label Message
              .input-container
                %textarea.full
      .modal-footer
        %button.btn.action.small Create response
        %button.btn.small Cancel

    .modal#addTriggerModal
      .modal-header
        %button.close
        %h2 Create a trigger
      .modal-body
        .form-wrapper
          .field-wrapper
            %fieldset
              .label-container
                %label Condition
              .input-container
                .dropdown-group
                  %button.btn.small
                    Select a condition 
                    %span.caret
                  %ul.dropdown-menu{ :style => 'display: none' }
                    %li
                      = link_to 'Reach a destination URL','#'
                    %li
                      = link_to 'Visitor time on site','#'
                    %li
                      = link_to 'Visitor time on url','#'
            %fieldset
              .label-container
                %label Value
              .input-container
                / %input.full{ :type => 'text', :placeholder => 'http://' }
                %input.full{ :type => 'text', :placeholder => '10', :style => 'width: 40px' }
                secs
            %fieldset
              .label-container
                %label Message to visitor
              .input-container
                %textarea.full
      .modal-footer
        %button.btn.action.small Create trigger
        %button.btn.small Cancel

    .modal-backdrop

    .modal-loader-wrapper.hide
