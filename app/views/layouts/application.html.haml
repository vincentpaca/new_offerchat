    .modal.dialog-box.hide
      .modal-header
        %button.close
        %h2 Action required
      .modal-body
        Are you sure you want to end this chat?
      .modal-footer
        %button.btn.action.small End chat
        %button.btn.small Cancel


    .modal.hide#sendDeveloperModal
      .modal-header
        %button.close
        %h2 Send widget code to your developer
      .modal-body
        .form-wrapper
          .field-wrapper
            %fieldset              
              .label-container
                %label To
              .input-container
                %input.full{ :type => 'text', :placeholder => 'webmaster@example.com' }
          .field-wrapper
            %fieldset              
              .label-container
                %label Subject
              .input-container
                %input.full{ :type => 'text', :value => 'Please install the Offerchat widget code' }
          .field-wrapper
            %fieldset
              %textarea.precoded.full#widgetCode{ :type => 'text', :style => 'height: 250px', :readonly => 'readonly' }
