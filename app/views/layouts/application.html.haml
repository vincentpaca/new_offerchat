              %strong Jonathan
              .user-current-status 
                / %span.status.online  
                / Online
                .status-connection
                  Connecting...
              .user-settings{ :style => 'display: none' }
                .user-select-status
                  .option-status
                    %span.status.away
                    Away
                  .option-status
                    %span.status.offline 
                    Offline

          .sidebar-inner.scrollable
            .section-nav
              %a.nav-parent.selected
                BuyRealMarketing
              .nav-bg
                %a.nav.active
                  Chats
                  %label.chat-count.nu 10
                %a.nav
                  History
