          .field-wrapper
            %fieldset              
              .label-container
                %label Subject
              .input-container
                %input.full{ :type => 'text', :value => 'Please install the Offerchat widget code' }
                .message-text.error
                  Please enter a subject
          .field-wrapper
            %fieldset
